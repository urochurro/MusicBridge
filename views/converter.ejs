<div class="overlay" style="display:none">
  <div id="loading-img" class="sk-chase">
    <div class="sk-chase-dot"></div>
    <div class="sk-chase-dot"></div>
    <div class="sk-chase-dot"></div>
    <div class="sk-chase-dot"></div>
    <div class="sk-chase-dot"></div>
    <div class="sk-chase-dot"></div>
  </div>
</div>

<div id='status' class='invisible'><%= errormessage %></div>
<div id='status1' class='invisible'><%= link %></div>
<form class="pink-background converter" action="/converter" method="post" autocomplete="off" onsubmit="show_slow_warning()">
  <label for="apple-link">Paste AppleMusic / Spotify playlist link below</label>
  <br>
  <br>
  <input type="text" class="playlistLink" name="link" placeholder="Link" required>
  <br>
  <br>
  <button id="done" class="btn btn-lg btn-outline-info convertButton" type="submit">Convert</button>
</form>

<script>
  let status = document.getElementById('status').innerHTML;
  // let status1 = document.getElementById('status1').innerHTML;
  if (status !== '') {
    alert(status);
  }

  function show_slow_warning() {
    var x = document.querySelector(".overlay");
    if (x.style.display === "none") {
      x.style.display = "block";
    } else {
      x.style.display = "none";
    }
  }

  $("#done").click(function () {
    $(".overlay").show();
});
</script>

