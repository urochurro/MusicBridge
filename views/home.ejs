<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Music Bridge</title>
<link rel="icon" href="images/logo.png">
  <!-- CSS Stylesheets -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <link rel="stylesheet" href="css/styles.css">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&display=swap" rel="stylesheet">

</head>

<body>
<%- include("navBar") -%>
  <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <table class="table">
        <tr>
          <td>
            <div class="container-md buttons align-right">
              <p class="login-btn spotify label-spotify">Login with</p>
              <a href="/auth/spotify" id="spotify-login-btn" class="login-btn spotify"><img src="images/spotifyLogo.png" alt="spotifyLogo" width="150px"></a>
            </div>
          </td>

          <td>
            <div class="container-md buttons align-left">
              <p class="login-btn appleMusic label-apple">Login with</p>
              <a href="#" id="apple-login-btn" class="login-btn appleMusic"><img src="images/appleMusicLogo.png" alt="appleMusicLogo" width="150px"></a>
              <form id="appleMusicUser" action="/" method="post">
                <input type="hidden" id="userToken" name="userToken" value="d">
              </form>
            </div>
          </td>
        </tr>
      </table>
      <!-- <video autoplay loop muted class="d-block w-100">
        <source src="images/M.mp4" type="video/mp4">
      </video> -->
      <img src="images/M2.gif" width="100%" alt="">
    </div>
  </div>
</div>
<footer class="text-muted">
  <div class="container">
    <p class="float-right">
      <a href="#">Back to top</a>
    </p>
    <p>Share the website if you enjoyed!</p>
    <p>Â© 2020 Uraaz Gorimar.</p>
  </div>
</footer>
</body>
<!-- Bootstrap -->
<script src="https://js-cdn.music.apple.com/musickit/v1/musickit.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

<script type="text/javascript">
  // listen for MusicKit Loaded callback
  document.addEventListener('musickitloaded', () => {
    // MusicKit global is now defined
    const music = MusicKit.configure({
      developerToken: '<%=devKey%>',
      app: {
        name: 'AppleMusicKitExample',
        build: '1978.4.1'
      }
    });

    document.getElementById('apple-login-btn').addEventListener('click', () => {
      music.authorize().then(musicUserToken => {
        console.log(`Authorized, music-user-token: ${musicUserToken}`);
        document.getElementById('userToken').value = musicUserToken;
        document.getElementById('appleMusicUser').submit();
      });
    });
  });
</script>

</html>
