<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Playlists - Music Bridge</title>
  <link rel="icon" href="images/logo.png">
  <!-- CSS Stylesheets -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <link rel="stylesheet" href="css/styles.css">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Commissioner&display=swap" rel="stylesheet">
</head>

<body>

<%- include("navBar") -%>
<!-- Grid -->
<main role="main">

  <!-- <section class="jumbotron text-center">
    <div class="container">
      <h1>Playlists</h1>
      <p class="lead text-muted">All the Playlists shared by our users from all over the world.</p>
      <p>
        <a href="/submit" class="btn btn-primary my-2">Submit a playlist</a>
      </p>
    </div>
  </section> -->

  <!-- <img class="intro-img" src="images/playlist.png" alt="playlist image"> -->
  <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="images/playlistDiscover.png" alt="playlist image">
      </div>
    </div>
  </div>

  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row">
        <%  playlists.forEach(function(playlist){ %>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow blue-border">
            <a href="<%=playlist.url%>" target="_blank"><img class="card-img-top" src="<%= playlist.image %>"></a>
            <div class="card-body">
              <p class="card-text"><%= playlist.name %></p>
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted"><%= playlist.owner %></small>
              </div>
            </div>
          </div>
        </div>
        <%  }) %>
      </div>
    </div>
  </div>

</main>
<%- include("footer") -%>
